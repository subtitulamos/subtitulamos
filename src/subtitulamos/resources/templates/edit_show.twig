<template id="show-properties">
  <div class="form-wrap">
    <h3>Propiedades de la serie</h3>
    <form  method="POST" action="/shows/{{episode.show.id}}/properties">
      <div class='form-field validated' fieldname="Nombre de la serie">
        <input id="name" type="text" class="form_input" name="name"
          value="{{ episode.show.name }}" required>
        <i class="fas fa-film"></i>
      </div>

      <div class='form-field checkbox-field'>
        {% if can_delete_show %}
        <div class="checkbox">
          <input type="checkbox" class="form_input" name="delete">
          <i class="fas fa-check"></i>
        </div>
        <div>Borrar serie?</div>
        {% else %}
        <div class="checkbox disabled">
          <input type="checkbox" class="form_input" name="delete" disabled>
        </div>
        <div>No se puede borrar una serie con cap√≠tulos.</div>
        {% endif %}
      </div>

      <button id="save-edit" type="submit" class='text'>Guardar</button>
    </form>
  </div>
</template>