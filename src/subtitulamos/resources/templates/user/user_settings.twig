{# Included in the scope of user.twig #}

<div id="private-info" class="info-group">
  <div class="form-wrap">
    <form name="" action="" method="POST">
      <div class="form-field validated disabled" fieldname="Nombre de usuario">
        <input disabled required value="{{ target_user.username }}">
        <i class="fas fa-user"></i>
      </div>
      <div class="form-field validated disabled" fieldname="Correo electrónico">
        <input disabled required value="{{ target_user.email }}">
        <i class="fas fa-envelope"></i>
      </div>
      <div class="form-field validated" fieldname="Nueva contraseña">
        <input required id="newpwd" name="newpwd" type="password" class="form_input" value="">
        <i class="fas fa-key"></i>
      </div>
      <div class="form-field validated" fieldname="Repetir contraseña">
        <input required id="pwdconfirm" name="pwdconfirm" type="password" class="form_input" value="">
        <i class="fas fa-key"></i>
      </div>

      <button type="submit" class='button button-fat'>Guardar</button>
    </form>
  </div>
</div>
